<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailFragment">

    <ImageView
        android:id="@+id/moviePoster"
        android:layout_width="match_parent"
        android:layout_height="257dp"
        android:layout_marginBottom="16dp"
        android:background="#000000"
        android:contentDescription="@string/moviePosterCD"
        app:srcCompat="@drawable/movie"
        tools:src="@tools:sample/backgrounds/scenic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/movieTitle"
            android:layout_width="61dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="2"
            android:fontFamily="sans-serif-medium"
            android:paddingEnd="4dp"
            android:text="@string/businessNameText"
            android:textColor="#000000"
            android:textSize="24sp"
            tools:ignore="RtlSymmetry" />

        <RatingBar
            android:id="@+id/detailRatingBar"
            style="@android:style/Widget.Material.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="4dp"
            android:layout_marginVertical="4dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:indeterminate="false"
            android:isIndicator="true"
            android:max="5"
            android:numStars="5"
            android:progressTint="#FFA726"
            android:rating="3"
            android:secondaryProgressTint="#FFA726"
            android:stepSize=".1" />

    </LinearLayout>

    <TextView
        android:id="@+id/movieRelease"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="4dp"
        android:text="@string/businessAddressText" />

    <TextView
        android:id="@+id/movieOverview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="4dp"
        android:text="@string/businessBioText"
        android:textSize="18sp" />


</LinearLayout>